<h1><%= @book.name %> <small>Written by: <%= @book.author %></small></h1>
<h4> Ranked: <%= @book.rank %> </h4>
<p> <%= @book.description %></p>
<%= readable_date @book.created_at %>
<%= form_for @book do |f| %>
  <%= f.hidden_field :upvote %>
  <%= f.submit "Upvote", class: "btn btn-primary" %>  
<% end %>
<br />
<%= link_to "Edit #{@book.name}", edit_book_path(@book), class: "btn btn-default"%>
<%= link_to "DELETE", @book, method: :delete, confirm: "Are you sure?", class: "btn btn-danger" %>
<%= link_to "View All Books", books_path, class: "btn btn-default"%>
<%= link_to "View All Media", root_path, class: "btn btn-default"%>
