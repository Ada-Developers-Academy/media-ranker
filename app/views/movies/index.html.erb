<table class="table table-hover">
  <tr>
    <th> Ranking </th>
    <th> Name </th>
    <th> Upvote </th>
  </tr>  
  <% @movies.order("rank DESC").each do |movie| %>
    <tr>
      <td> Ranked: <%= movie.rank %> </td>
      <td> <%= link_to movie.name, movie %> </td>
      <td>
        <%= form_for movie do |f| %>
          <%= f.hidden_field :upvote %>
          <%= f.submit "Upvote", class: "btn btn-default" %>  
        <% end %>
      </td>  
    </tr>  
  <% end %>  
</table>
  
<%= link_to "View All Media", root_path, class: "btn btn-default" %>
<%= link_to "Add a Movie", new_movie_path, class: "btn btn-default" %>